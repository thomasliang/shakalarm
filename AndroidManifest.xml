<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shakalarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.shakalarm.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shakalarm.AlarmSetting"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shakalarm.alert.AlarmAlertActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Go to different Alarm Setting Page-->
        <activity 
            android:name="BasicAlarmSettingActivity"
            android:label="@string/basic_alarm">
        </activity>
        
        <activity 
            android:name="ShakalarmSettingActivity"
            android:label="@string/shakalarm">
        </activity>
        
        <activity 
            android:name="BlowalarmSettingActivity"
            android:label="@string/blowalarm">
        </activity>
        
        <receiver android:name="com.example.shakalarm.alert.AlarmManagerBroadcastReceiver">
        </receiver>
    </application>

</manifest>
